<Window x:Class="Rating_App.SlideForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rating_App"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
         Title="Trình chiếu" Width="500" Height="350" >

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label FontSize="14" VerticalAlignment="Center" Grid.Column="0">Username</Label>
            <TextBox Name="txt_path" Grid.Column="1" Width="300" Style="{DynamicResource textbox}"/>
        </Grid>
        <Grid Grid.Row="1"  Margin="40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label FontSize="14" VerticalAlignment="Center" Grid.Column="0">Loại hình</Label>
            <StackPanel Grid.Column="1" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition  Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Height="25"  Grid.Column="0">
                        <RadioButton x:Name="rbn_image" Click="RadioButton_Click" IsChecked="True">Hình ảnh</RadioButton>
                    </Viewbox>
                    <Viewbox Height="25" Grid.Column="1">
                        <RadioButton x:Name="rbn_video" Click="RadioButton_Click">Video</RadioButton>
                    </Viewbox>
                </Grid>
            </StackPanel>
        </Grid>
        <Button Margin="0,10" Background="SkyBlue" Foreground="White" VerticalAlignment="Top" Grid.Row="2" Name="btn_login"
            Style="{DynamicResource button}" Content="Đăng nhập"/>
    </Grid>
</Window>
