<Window x:Class="Rating_App.SlideForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rating_App"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
         Title="Tệp trình chiếu" Width="500" Height="270" Closed="Window_Closed" Loaded="Window_Loaded">

    <Grid Background="White" Name="panel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Viewbox Stretch="Uniform" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
            <TextBlock Text="Thêm Tệp trình chiếu" FontWeight="Bold" Foreground="LightSkyBlue" VerticalAlignment="Center" />
        </Viewbox>
        <Viewbox Stretch="Uniform" Grid.Row="3" Grid.Column="1" >
            <TextBlock Text="Đường dẫn" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        </Viewbox>
        <Button Name="btn_path"  Grid.Row="3" Grid.Column="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="btn_path_Click" Style="{DynamicResource button_file}">
            <TextBlock x:Name="txt_path" Text="Chọn File"/>
        </Button>
        <Button Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3"  Background="SkyBlue" Foreground="White"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Name="btn_submit" Click="btn_submit_Click"
            Style="{DynamicResource button}" Content="Thêm"/>
    </Grid>
</Window>
