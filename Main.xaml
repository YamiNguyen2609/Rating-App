<Window x:Class="Rating_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rating_App"
        mc:Ignorable="d"
        Name="main_window"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid Background="LightGray">
        <Canvas>
            <Button Canvas.Top="10" Canvas.Right="10" Name="btn_home" Background="Transparent" BorderThickness="0" Click="Btn_home_Click">
                <Image Source="/images/ic-home.png" Width="25" Height="25"></Image>
            </Button>
        </Canvas>
        <Canvas>
            <Button Canvas.Bottom="10" Name="btn_zoom" Canvas.Right="10" Background="Transparent" BorderThickness="0" Click="Btn_zoom_Click">
                <Image Source="/images/ic-zoom.png" Width="25" Height="25"></Image>
            </Button>
        </Canvas>
    </Grid>
</Window>

